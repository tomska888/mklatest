{
  "name": "am-automobile-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "set NODE_ENV=development&& node src/index.js",
    "sync-frontend": "node scripts/sync-frontend.js",
    "postinstall": "node -e \"console.log('Installing frontend deps (including dev), building, and syncing to backend/public...')\" && npm --prefix ../frontend install --production=false --no-audit --no-fund && npm --prefix ../frontend run build && node scripts/sync-frontend.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "mysql2": "^3.9.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "uuid": "^9.0.1"
  }
}